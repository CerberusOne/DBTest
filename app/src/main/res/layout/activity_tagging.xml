<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aingaran.dbtest.TaggingActivity">

    <Button
        android:id="@+id/captionButton"
        android:layout_width="385dp"
        android:layout_height="46dp"
        android:layout_marginTop="15dp"
        android:onClick="addCaption"
        android:text="Add Caption"
        app:layout_constraintTop_toBottomOf="@+id/captionInput"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/timestampButton"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:onClick="addTimestamp"
        android:text="Add Timestamp"
        app:layout_constraintBottom_toTopOf="@+id/geolocationButton"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/captionButton"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/geolocationButton"
        android:layout_width="385dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="82dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="addGeolocation"
        android:text="Add Geolocation"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag Photo:"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <EditText
        android:id="@+id/captionInput"
        android:layout_width="385dp"
        android:layout_height="54dp"
        android:ems="10"
        android:hint="Enter a Caption"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="132dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/button"
        android:layout_width="383dp"
        android:layout_height="50dp"
        android:onClick="Save"
        android:text="Save"
        tools:layout_editor_absoluteX="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/geolocationButton"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />
</android.support.constraint.ConstraintLayout>
